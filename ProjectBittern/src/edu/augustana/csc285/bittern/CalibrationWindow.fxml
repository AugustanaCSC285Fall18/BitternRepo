<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="761.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.csc285.bittern.CalibrationWindowController">
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <Label prefHeight="17.0" prefWidth="85.0" text="Setup" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </top>
   <center>
      <VBox prefHeight="676.0" prefWidth="761.0" BorderPane.alignment="CENTER">
         <children>
            <BorderPane fx:id="drawingBoard" onMouseClicked="#handleDrawingBoard">
               <center>
                  <ImageView fx:id="videoView" onMouseClicked="#getPoint" pickOnBounds="true" preserveRatio="true" />
               </center>
            </BorderPane>
            <Slider fx:id="sliderBar" onDragDetected="#handleSlider" />
         </children>
      </VBox>
   </center>
   <bottom>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="lengthButton" layoutX="185.0" layoutY="30.0" mnemonicParsing="false" onAction="#handleLengthButton" text="Set Length" />
            <Button fx:id="widthButton" layoutX="185.0" layoutY="65.0" mnemonicParsing="false" onAction="#handleWidthButton" prefHeight="25.0" prefWidth="73.0" text="Set Width" />
            <Label layoutX="35.0" layoutY="30.0" prefHeight="17.0" prefWidth="90.0" text="Length in Pixels:" />
            <Label layoutX="35.0" layoutY="65.0" prefHeight="17.0" prefWidth="90.0" text="Width in Pixels: " />
            <Label fx:id="lengthLabel" layoutX="125.0" layoutY="30.0" prefHeight="17.0" prefWidth="40.0" />
            <Label fx:id="widthLabel" layoutX="125.0" layoutY="65.0" prefHeight="17.0" prefWidth="40.0" />
            <Button fx:id="confirmButton" layoutX="673.0" layoutY="157.0" mnemonicParsing="false" onAction="#handleConfirm" text="Confirm" />
            <Button fx:id="backButton" layoutX="35.0" layoutY="157.0" mnemonicParsing="false" onAction="#handleBack" text="Back" />
            <Label layoutX="285.0" layoutY="30.0" text="Actual Length: " />
            <Label layoutX="285.0" layoutY="65.0" text="Actual Width: " />
            <TextField fx:id="lengthTextField" layoutX="370.0" layoutY="30.0" onAction="#setActualLength" prefHeight="25.0" prefWidth="46.0" promptText="in cm" />
            <TextField fx:id="widthTextField" layoutX="370.0" layoutY="65.0" onAction="#setActualWidth" prefHeight="25.0" prefWidth="46.0" promptText="in cm" />
            <ComboBox fx:id="chicksComboBox" layoutX="552.0" layoutY="30.0" onAction="#handleComboBox" prefHeight="25.0" prefWidth="43.0" visibleRowCount="3" />
            <Label layoutX="445.0" layoutY="30.0" prefHeight="17.0" prefWidth="107.0" text="Number of Chicks" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
