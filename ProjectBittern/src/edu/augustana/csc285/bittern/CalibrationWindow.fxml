<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="761.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.csc285.bittern.CalibrationWindowController">
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <Label prefHeight="17.0" prefWidth="85.0" text="Calibration" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </top>
   <center>
      <VBox prefHeight="676.0" prefWidth="761.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="videoView" onMouseClicked="#getPoint" pickOnBounds="true" preserveRatio="true" />
            <Slider fx:id="sliderBar" onDragDetected="#handleSlider" />
         </children>
      </VBox>
   </center>
   <bottom>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="lengthButton" layoutX="35.0" layoutY="51.0" mnemonicParsing="false" onAction="#handleLengthButton" text="Set Length" />
            <Button fx:id="widthButton" layoutX="35.0" layoutY="97.0" mnemonicParsing="false" onAction="#handleWidthButton" prefHeight="25.0" prefWidth="73.0" text="Set Width" />
            <Label layoutX="126.0" layoutY="55.0" prefHeight="17.0" prefWidth="90.0" text="Length in Pixels:" />
            <Label layoutX="126.0" layoutY="101.0" prefHeight="17.0" prefWidth="90.0" text="Width in Pixels: " />
            <Label fx:id="lengthLabel" layoutX="222.0" layoutY="55.0" prefHeight="17.0" prefWidth="40.0" />
            <Label fx:id="widthLabel" layoutX="222.0" layoutY="101.0" prefHeight="17.0" prefWidth="40.0" />
            <Button fx:id="confirmButton" layoutX="673.0" layoutY="157.0" mnemonicParsing="false" onAction="#handleConfirm" text="Confirm" />
            <Button fx:id="backButton" layoutX="35.0" layoutY="157.0" mnemonicParsing="false" onAction="#handleBack" text="Back" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
