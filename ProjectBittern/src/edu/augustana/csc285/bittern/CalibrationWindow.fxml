<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="761.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.csc285.bittern.CalibrationWindowController">
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <Label prefHeight="17.0" prefWidth="85.0" text="Setup" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </top>
   <center>
      <VBox prefHeight="676.0" prefWidth="761.0" BorderPane.alignment="CENTER">
         <children>
            <BorderPane fx:id="drawingBoard" onMouseClicked="#handleDrawingBoard">
               <center>
                  <ImageView fx:id="videoView" onMouseClicked="#getPoint" pickOnBounds="true" preserveRatio="true" />
               </center>
            </BorderPane>
            <Slider fx:id="sliderBar" onDragDetected="#handleSlider" />
         </children>
      </VBox>
   </center>
   <bottom>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="confirmButton" layoutX="673.0" layoutY="157.0" mnemonicParsing="false" onAction="#handleConfirm" text="Confirm" />
            <Button fx:id="backButton" layoutX="35.0" layoutY="157.0" mnemonicParsing="false" onAction="#handleBack" text="Back" />
            <Label layoutX="430.0" layoutY="104.0" text="Actual Length : " />
            <TextField fx:id="setActualLength" layoutX="527.0" layoutY="100.0" onAction="#setActualLength" prefHeight="25.0" prefWidth="46.0" promptText="in cm" />
            <Button fx:id="XAxisButton" layoutX="154.0" layoutY="100.0" mnemonicParsing="false" onAction="#handleCalibrationTool" text="Calibration Tool" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
