<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="761.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.csc285.bittern.CalibrationWindowController">
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <Label prefHeight="17.0" prefWidth="85.0" text="Setup" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </top>
   <center>
      <VBox prefHeight="676.0" prefWidth="761.0" BorderPane.alignment="CENTER">
         <children>
            <BorderPane fx:id="drawingBoard" onMouseClicked="#handleDrawingBoard">
               <center>
                  <ImageView fx:id="videoView" onMouseClicked="#getPoint" pickOnBounds="true" preserveRatio="true" />
               </center>
            </BorderPane>
            <Slider fx:id="sliderBar" onDragDetected="#handleSlider" />
         </children>
      </VBox>
   </center>
   <bottom>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="confirmButton" layoutX="673.0" layoutY="157.0" mnemonicParsing="false" onAction="#handleConfirm" text="Confirm" />
            <Button fx:id="backButton" layoutX="35.0" layoutY="157.0" mnemonicParsing="false" onAction="#handleBack" text="Back" />
            <Label layoutX="433.0" layoutY="113.0" text="Actual Length : " />
            <TextField fx:id="setActualLengthY" layoutX="538.0" layoutY="109.0" onAction="#setActualLengthY" prefHeight="25.0" prefWidth="46.0" promptText="in cm" />
            <Button fx:id="setX" layoutX="176.0" layoutY="157.0" mnemonicParsing="false" onAction="#handleSetX" text="Set X" />
            <Button fx:id="setY" layoutX="248.0" layoutY="157.0" mnemonicParsing="false" onAction="#handleSetY" text="Set Y" />
            <Label layoutX="433.0" layoutY="56.0" text="Actual Length : " />
            <TextField fx:id="setActualLengthX" layoutX="538.0" layoutY="52.0" onAction="#setActualLengthX" prefHeight="25.0" prefWidth="46.0" promptText="in cm" />
            <CheckBox layoutX="269.0" layoutY="56.0" mnemonicParsing="false" text="Set X" />
            <CheckBox layoutX="269.0" layoutY="83.0" mnemonicParsing="false" text="Set Y" />
            <ColorPicker fx:id="colorChoice" editable="true" layoutX="35.0" layoutY="52.0" onAction="#handleColorChoice" />
            <CheckBox layoutX="269.0" layoutY="113.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="69.0" text="Origin" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
