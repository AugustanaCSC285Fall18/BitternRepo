<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="820.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.csc285.bittern.ManualTrackWindowController">
   <bottom>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="chicksBox" layoutX="307.0" layoutY="75.0" onAction="#handleChicksBox" prefWidth="150.0" promptText="Current Chick" visibleRowCount="3" />
            <Button fx:id="previousButton" layoutX="262.0" layoutY="40.0" minWidth="60.0" mnemonicParsing="false" onAction="#handlePrevious" prefHeight="25.0" prefWidth="76.0" text="Previous" />
            <Button fx:id="playButton" layoutX="352.0" layoutY="40.0" mnemonicParsing="false" onAction="#handlePlay" prefHeight="25.0" prefWidth="60.0" text="Play" />
            <Button fx:id="nextButton" layoutX="427.0" layoutY="40.0" mnemonicParsing="false" onAction="#handleNext" prefWidth="60.0" text="Forward" />
            <Button fx:id="exportButton" layoutX="699.0" layoutY="161.0" mnemonicParsing="false" onAction="#handleExport" text="Export" />
            <Button fx:id="backButton" layoutX="14.0" layoutY="161.0" mnemonicParsing="false" onAction="#handleBack" text="Back" />
            <ComboBox fx:id="tracksBox" layoutX="26.0" layoutY="53.0" onAction="#handleTracksBox" prefWidth="150.0" promptText="Auto Tracks" />
            <Label fx:id="startFrameLabel" layoutX="639.0" layoutY="32.0" prefHeight="17.0" prefWidth="85.0" />
            <Label fx:id="currentFrameLabel" layoutX="784.0" layoutY="109.0" prefHeight="17.0" prefWidth="69.0" />
         </children>
      </AnchorPane>
   </bottom>
   <center>
      <VBox prefWidth="750.0" BorderPane.alignment="CENTER">
         <children>
            <StackPane fx:id="stackPane" prefHeight="575.0" prefWidth="750.0">
               <children>
                  <ImageView fx:id="videoView" pickOnBounds="true" preserveRatio="true" />
                  <Canvas fx:id="drawingCanvas" height="547.0" width="750.0" />
               </children>
            </StackPane>
            <Canvas fx:id="progressCanvas" height="15.0" width="750.0" />
            <Slider fx:id="sliderBar" prefHeight="14.0" prefWidth="750.0" />
         </children>
      </VBox>
   </center>
   <top>
      <BorderPane prefHeight="23.0" BorderPane.alignment="CENTER">
         <center>
            <Label text="Current Time:" BorderPane.alignment="CENTER" />
         </center>
         <right>
            <Label fx:id="endFrameLabel" prefHeight="17.0" prefWidth="78.0" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </top>
</BorderPane>
